#event-modal
    padding 2px

    .btn
        border-radius 5px

    .modal-header
        background #aaa
        color #fff
        border-radius 5px 5px 0 0

        button.close
            margin-top -2px

    .modal-body

        h4
            margin-top 25px
            font-size 20px
            font-family styled

        #rrule-short
            font-size 14px

        #rrule
            #rrule-interval
            #rrule-freq
            #rrule-until
            #rrule-count
                margin 0 5px

            #rrule-interval
            #rrule-count
                width 35px
            #rrule-freq
                width 175px

            #rrule-weekdays
                label.checkbox
                        margin-left 5px

        #guests
            #addguest
            #addguest-field
                vertical-align top
            #addguest
                margin-left 5px

            #guest-info
                display inline-block
                height 30px
                max-width 200px
                margin-left 10px
                margin-top 5px
                i
                    display inline-block
                    width 30px
                    width 30px
                    vertical-align text-top
                    font-size 30px
                span
                    display inline-block
                    max-width 165px
                    vertical-align middle
                    text-align center
                    border-radius 4px
                    font-size 11px

        #guests-list
            i
                vertical-align middle
            i.green
                color green
            i.red
                color red
            i.blue
                color blue

    .modal-footer
        #cancel-btn
            font-size 13px
            margin-right 10px