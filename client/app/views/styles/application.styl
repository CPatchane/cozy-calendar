// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_ui'

// Import your styles here

@import '_states'
@import '_layout'
@import '_responsive'

h1
  margin-top: 15px
  margin-bottom: 25px
  font-size: 36px

.form-horizontal .control-label
  font-size: 13px
  width: 100px
.form-horizontal .controls
  margin-left: 120px

button.add-alarm, button.remove-alarm
  padding: 1px
  margin-left: 5px
  height: 18px
  line-height: 20px

input[type="date"]
  width: 150px
input[type="time"]
  width: 75px

.dayprogram
  border-bottom: 1px solid rgba(0, 0, 0, 0.05)
  padding-bottom: 15px
  margin-bottom: 15px

  .alarms
    margin-top: 15px

.dayprogram:nth-last-child(1)
  border-bottom: 0
  padding-bottom: 0

.affix
  position: fixed
  top: 0px
  width: 940px
  margin: auto
  > div
    border-width: 5px
    border-radius: 0