@import 'nib'

@import '_base'
@import '_ui'

/* Styles for the calendar popover (event and alarm creation/edition) */

.popover
    max-width: none
    width: 400px

    .timeseparator
        display: inline-block
        margin-bottom: 10px
        vertical-align: middle

    #input-place
        min-width: 120px

    .popover-title

        button
            margin-top: -4px

        i.remove
            cursor: pointer

    .popover-content

        #input-start, #input-end, #input-time
            width: 3em

        #input-diff
            width: 35px

        .badge
            margin-bottom: 10px
            margin-left: 5px
            line-height: 20px
            vertical-align: middle
            cursor: pointer

            i
                margin-top: 0px

            &:hover
                background: orange

        button
            margin-left: 5px

            &.disabled
                border: 1px solid grey

                &:hover
                    background: #e6e6e6
                    color: #333

        p
            font-size: 12px
            margin-left: 5px

        a
            font-size 12px



/* Styles for the fullcalendar plugin */

.fc-button-prev, .fc-button-next, .fc-button-today,
.fc-button-month, .fc-button-week, .fc-button-agendaWeek
.fc-button-day, .fc-button-agendaDay

    border-color: transparent
    background: transparent
    color: blue
    box-shadow: none
    text-shadow: none
    padding-bottom: 3px
    font-family: main

    &:hover
        background: transparent
        color: orange

        &.fc-state-disabled
            background: blue

    &:active
        background: blue + 80%
        cursor: default
        color: blue

    &.fc-button-today.fc-state-disabled
    &.fc-state-active
        background: blue + 80%
        color: blue + 20%
        border-radius: 4px
        cursor: default

    &.fc-button-today.fc-state-disabled:hover
    &.fc-state-active:hover
        color: blue + 20%
        border-radius: 4px
        color: blue

.fc-content
    clear:none

    thead
        background: blue
        color: #fff

        tr
            th
                height: 30px
                line-height: 30px
                border: none

                &:first-child
                    border-radius: 10px 0 0 0

                &:last-child
                    border-radius: 0 10px 0 0

    tbody
            .fc-state-highlight
                background: lightblue

    .fc-event-inner .fc-event-time

        &.spinning
            display: inline-block
            margin: 3px

.fc-cell-overlay
    background: green


.fc-header
    cursor: default

.fc-header-title

    h2
        font-weight: normal

.fc-title, .fc-content

    thead
    thead > tr.fc-first
    .fc-day-header
    .fc-widget-header
        font-family: styled
        background: white
        border-radius: 0
        color: black
        cursor: default
        font-weight: normal

.fc-agenda-axis
    background: white
    color: darkgrey

.fc-agenda-axis.fc-first
    background: white
    border-radius: 0
    color: white

.fc-day-number
    font-family: styled

.fc-event-inner
    border: 0
    border-radius: 0
    color: white
    font-family: main

.fc-day:hover
    background: orange + 80%

.alarm-remove
    cursor: pointer

.event-remove
    cursor: pointer

.fc-widget-content
.fc-cell-overlay
    cursor: pointer

.fc-view
    overflow: visible

#viewContainer .fc-content .fc-cell-overlay
    background: #CBE4FB

#viewContainer .fc-content tbody .fc-state-highlight
    background: #CCF0CC

#viewContainer .fc-event-inner:hover
    color: white
    background: orange
    border: 0

#alarms
    thead
        .fc-first
            .fc-day-header
            .fc-widget-header
                border-bottom: 1px solid #DDD

a.btn:visited
    color: white
