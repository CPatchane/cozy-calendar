// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_ui'

.fc-button-prev, .fc-button-next, .fc-button-today,
.fc-button-month, .fc-button-week, .fc-button-agendaWeek
.fc-button-day, .fc-button-agendaDay
  background: blue
  color: #FFF

  &:hover
    background: orange
    &.fc-state-disabled
      background: blue

  &.fc-state-active
    background: blue - 20%

.fc-content

  thead
    background: blue
    color: #fff

    tr
      th
        height: 30px
        line-height: 30px
        border: none

        &:first-child
          border-radius 10px  0 0 0
        &:last-child
          border-radius 0 10px 0 0

  tbody
      .fc-state-highlight
        background: lightblue
