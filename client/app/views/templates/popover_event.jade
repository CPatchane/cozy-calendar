- popoverClassName  = (allDay ? ' is-all-day' : '')
- popoverClassName += (sameDay? ' is-same-day' : '')

.popover-content-wrapper.label-row(class=popoverClassName)
    .item-row
        label.timed.time-row(aria-hidden="#{allDay}")
            .icon
                span.fa.fa-arrow-right
            span.caption= t("From")
            input.input-start-date.input-date(tabindex="3",
                                              type="date",
                                              size="10"
                                              placeholder=t("From [date]"),
                                              value=start.format(dFormat))
            input.input-start.input-time(tabindex="2",
                                         type="time",
                                         size="5"
                                         placeholder=t("From [hours:minutes]"),
                                         value=start.format(tFormat))

        label.timed.time-row(aria-hidden="#{allDay}")
            .icon
                span.fa.fa-arrow-left
            span.input-end-caption.caption= t("To")
            input.input-end-date.input-date(tabindex="5",
                                            type="date",
                                            size="10"
                                            placeholder=t("To [date]"),
                                            value=end.format(dFormat))
            input.input-end-time.input-time(tabindex="4",
                                            type="time",
                                            size="5"
                                            placeholder=t("To [hours:minutes]"),
                                            value=end.format(tFormat))

    .item-row
        label.all-day
            input.input-allday(tabindex="6",
                               type="checkbox",
                               value='checked',
                               checked=allDay)
            span= t('All day')


div.label.label-row
    .icon
        span.fa.fa-map-marker
    input.input-place.input-full-block(tabindex="7",
                      type="text",
                      value=place,
                      placeholder=t("Place"))

div.label.label-row
    .icon
        span.fa.fa-users
    input.input-people.input-full-block(tabindex="8",
                      type="text",
                      value=people,
                      placeholder=t("People"))

.more
    div.label.label-row
        .icon
            span.fa.fa-align-left
        input.input-description.input-full-block(tabindex="9",
                          type="text",
                          value=description,
                          placeholder=t("Description"))

    div.label.label-row
        .icon
            span.fa.fa-bell
        select.input-alert.input-full-block
          option No Alert
          option At time of Event
          option 5 minutes before
          option 15 minutes before
          option 30 minutes before
          option 1 hour before
          option 2 hour before
          option 6 hour before
          option 12 hour before
          option 1 day before
          option 2 day before
          option 3 day before
          option 5 day before
          option 7 day before

    div.label.label-row
        .icon
            span.fa.fa-repeat
        select.input-repeat.input-full-block
          option No Repeat
          option Daily
          option Weekly
          option Monthly
          option Yearly

.popover-footer
    a.advanced-link(role="button",
                    tabindex="8",
                    href='#' + advancedUrl,
                    data-tabindex-next="1")
        = t('advanced')
    a.btn.add(role="button",
              tabindex="7")
        = editionMode ? t('Save') : t('Create Event')
