li(data-index=index)
    .alert-top
        .alert-timer= label
        button.alert-delete.fa.fa-trash-o(title=t('close'), role="button")
    .type
        .notification-mode
            input.action-email(id="email-#{index}", type="checkbox", checked=isEmailChecked)
            label(for="email-#{index}") Email
        .notification-mode
            input.action-display(id="display-#{index}", type="checkbox", checked=isNotifChecked)
            label(for="display-#{index}") Cozy notification
