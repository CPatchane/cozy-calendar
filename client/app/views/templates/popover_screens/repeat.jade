.fixed-height.repeat-screen

    label
        select.input-repeat.select-big(name="frequency")
            option(value=NO_REPEAT, selected=isFreqSelected(NO_REPEAT)) No Repeat
            option(value=RRule.DAILY, selected=isFreqSelected(RRule.DAILY)) Daily
            option(value=RRule.WEEKLY, selected=isFreqSelected(RRule.WEEKLY)) Weekly
            option(value=RRule.MONTHLY, selected=isFreqSelected(RRule.MONTHLY)) Monthly
            option(value=RRule.YEARLY, selected=isFreqSelected(RRule.YEARLY)) Yearly

    label.inline-input.generic(aria-hidden=genericLimitedVisibility()) 
        span.first-input=t('Interval')
        input.special(type="number", min=1, value=rrule.interval, name="interval")
        span=t('days')

    label.inline-input.weekly-only(aria-hidden=limitedVisibility(RRule.WEEKLY))
        span.first-input=t('On days')
        .space-between
            - each weekday, index in weekDays
                label
                    input(type="checkbox", name="weekly-repeat-type", value="#{index}", checked=isWeekdaySelected(weekday))
                    span= weekday[0]

    label.inline-input.monthly-only(aria-hidden=limitedVisibility(RRule.MONTHLY))
        span.first-input.align-top=t('Repeat by')
        div
            label
                input(type="radio", name="monthly-repeat-type", value="repeat-day", checked=monthlyRepeatBy('repeat-day'))
                | Day of the month

            label
                input(type="radio", name="monthly-repeat-type", value="repeat-weekday", checked=monthlyRepeatBy('repeat-weekday'))
                | Day of the week


    label.inline-input.generic(aria-hidden=genericLimitedVisibility())
        span.first-input.align-top=t('Ends')
        div
            label.inline-input
                input(type="radio", name="endMode", value='never', checked=isEndModeSelected('never'))
                = t('Never')

            label.inline-input
                input(type="radio", name="endMode", value='count', checked=isEndModeSelected('count'))
                label(for="count")= t('after')
                input#rrule-count.special.input-mini(name="count", type="number", min=0, value=rrule.count)
                label(for="rrule-count")=t('occurences')
            
            label.inline-input
                input(type="radio", name="endMode", value='until', checked=isEndModeSelected('until'))
                label(for="until")= t('until')
                input.special.input-until-date.input-date(tabindex="3",
                                      type="text",
                                      size="10",
                                      name="until-date",
                                      placeholder=t("Until [date]"),
                                      value=rrule.until)

    div.inline-input.summary.generic(aria-hidden=genericLimitedVisibility())
        span.first-input.align-top=t('Summary')
        span#summary
